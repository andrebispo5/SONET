/** Add css rules here for your application. */


/** Example rules used by the template application (remove for your app) */
h1 {
  font-size: 16em;
  font-weight: bold;
  color: #777777;
  margin: 40px 0px 70px;
  text-align: center;
}

#header {
  font-family:	Helvetica;
  font-size:     38pt;
  color: white;
  background:#0B3861;
  font-weight:  bold;
  text-align: center;
  
}

#mainPanel{
	position:relative;
	top:250px;
	left:0;
	width: 100%;
	height: 100%;
	size: 100%;
}

#menu {
  position:relative;
  top:200px;
  left:0;
  width: 200px;
}

#footer {
  font-family:	Helvetica;
  background:#0B3861;
  font-size:     28pt;
  font-weight:  bold;
  text-align: center;
  position:absolute;
  bottom:0;
  width:100%;
  height:60px;
}
.buttonNav {
   margin: 0;
  padding: 5px 7px;
  text-decoration: none;
  font-family:	Helvetica;
  cursor: pointer;
  cursor: hand;
  font-size:14pt;
  background: #0B3861;
  border:1px solid #bbb;
  border-bottom: 1px solid #a0a0a0;
  border-radius: 3px;
 -moz-border-radius: 3px;
  width: 200px;
  color: white;
}

.inputBox {
  margin: 0;
  padding: 5px 7px;
  text-decoration: none;
  font-family:	Helvetica;
  font-size:14pt;
  background: #0B3861;
  border:1px solid #bbb;
  border-bottom: 1px solid #a0a0a0;
  border-radius: 3px;
 -moz-border-radius: 3px;
  width: 200px;
  color: white;
}
.buttonNav:active{
  background: #6ca;
}

.buttonNav:hover{
  background: #61a;
}


.style-login {
	display: block;
	position:absolute;
	left:15%;
	top:30%;
}

.showProfile {
  font-family:	Helvetica;
  font-size:     24pt;
  font-weight:  bold;
}

.loginButton {
  display: block;
  font-size: 16pt;
}

/** Most GWT widgets already have a style name defined */
.gwt-DialogBox {
  width: 400px;
}

.dialogVPanel {
  margin: 5px;
}

.serverResponseLabelError {
  color: red;
}

/** Set ids using widget.getElement().setId("idOfElement") */
#closeButton {
  margin: 15px 6px 6px;
}


/* ADDED */

.label {
  font-size:   10pt;
  color:      black;
  text-align:  left;
}

.labelError {
  font-size:     10pt;
  color:         red;
  text-align: center;
}

.labelInfo {
  color: #B234A1;
  text-align: center;
  margin-top: 10px;
  border-top: 1px solid silver;
}

.addNoteButton {
  margin: 2px 2px 2px;
}

/* publications list table */
.publicationsTable {
  border: 1px solid silver;
  border-collapse: collapse;
  padding: 2px;
  margin:  6px;
}

.publicationsTableHeader {
  border: 1px solid silver;
  text-align:       center;
  background-color: blue;
  color:            white;
}

.publicationsTableCell {
  background-color:#0B3861;
  color:white;
}

.publicationsTableNameCell {
  border: 1px solid silver;
  text-align:left;
}

.publicationsTablePhoneCell {
  border: 1px solid silver;
  text-align:right;
}

.friendListHeader{
	text-align:center;
	 background-color:#0B3861;
	 color:white
}

.friendListCell{
	border: 1px solid #A9D0F5;
	text-align:center;
	 background-color:#A9D0F5;
	 }

